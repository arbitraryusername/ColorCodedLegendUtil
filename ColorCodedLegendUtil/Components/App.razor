    <script>
        // define function for C#/JS interop 
        window.getElementBoundingClientRect = (element) => {
            if (element) {
                const rect = element.getBoundingClientRect();
                return {
                    top: rect.top,
                    left: rect.left,
                    bottom: rect.bottom,
                    right: rect.right,
                    width: rect.width,
                    height: rect.height
                };
            }
            return null;
        };
    </script>
